{
    "name": "triyak/react-performance",
    "description": "The world's most advanced React performance optimization toolkit - Built on 500+ enterprise website optimizations",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bhavendra Singh",
            "email": "info@triyak.in",
            "homepage": "https://www.triyak.in",
            "role": "Developer"
        }
    ],
    "homepage": "https://www.triyak.in/docs/react-performance",
    "support": {
        "email": "info@triyak.in",
        "issues": "https://github.com/bhaven13/triyak-react-performance/issues",
        "source": "https://github.com/bhaven13/triyak-react-performance",
        "docs": "https://www.triyak.in/docs/react-performance"
    },
    "keywords": [
        "react",
        "performance",
        "optimization",
        "core-web-vitals",
        "lcp",
        "fid",
        "cls",
        "bundle-optimization",
        "memory-optimization",
        "ai-optimization",
        "enterprise",
        "triyak",
        "digital-marketing",
        "seo-optimization",
        "web-performance",
        "php",
        "laravel",
        "symfony",
        "wordpress"
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^2.0",
        "symfony/http-foundation": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Triyak\\ReactPerformance\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Triyak\\ReactPerformance\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "stan": "phpstan analyse src tests",
        "sniff": "phpcs src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
